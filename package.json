{
  "name": "shadow-economy",
  "version": "0.1.0",
  "description": "Privacy-Preserving Parallel DeFi Ecosystem on EVVM",
  "private": true,
  "workspaces": [
    "contracts",
    "bots",
    "frontend"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:all": "npm run test --workspaces --if-present",
    "lint": "eslint .",
    "lint:all": "npm run lint --workspaces --if-present && npm run lint",
    "lint:contracts": "cd contracts && solhint 'contracts/**/*.sol'",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "prepare": "node -e \"if (process.env.NODE_ENV !== 'production' && !process.env.CI) { require('child_process').execSync('husky install', { stdio: 'inherit' }) }\"",
    "validate": "npm run lint:all && npm run test:all && npm run build"
  },
  "keywords": [
    "EVVM",
    "DeFi",
    "Privacy",
    "Encryption",
    "ETHOnline"
  ],
  "author": "Shadow Nox Team",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "husky": "^8.0.3",
    "solhint": "^4.1.1"
  },
  "dependencies": {
    "@lit-protocol/auth-helpers": "^8.0.2",
    "@lit-protocol/constants": "^8.0.2",
    "@lit-protocol/encryption": "^7.3.1",
    "@lit-protocol/lit-node-client": "^7.3.1",
    "nodemon": "^3.1.10",
    "siwe": "^3.0.0"
  }
}
